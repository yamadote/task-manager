                    </div>
                    <div class="panel-body">
                        <div class="content-row">
                            <div class="row">
                                <div id="root"></div>
                            </div>
                        </div>
                    </div><!-- panel body -->
                </div>
            </div><!-- content -->
        </div>
    </div>
