{% extends 'page.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block content %}
    <div id="root"></div>

    <table class="table">
        <thead>
            <tr>
                <th class="task-status-badge text-center align-middle">#</th>
                <th>Task</th>
                <th style="width: 60px;"></th>
                <th style="width: 168px;">Reminder</th>
                <th style="width: 101px;">Status</th>
                <th style="width: 221px;"></th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            {% set status = statusList[task.status] %}
            {% set isActive = active | default(false) and active.task == task %}
            <tr class="task task-status-{{ status.slug }} {{ task.isReminder ? 'task-reminder' : '' }} {{ isActive ? 'active' : '' }}">
                <td class="task-status-badge text-center align-middle">#</td>
                <td>
                    {% if task.hasChildren and link.hasParentLink %}
                        <a href="{{ path(link.parentRoute, link.parentRouteParams(task)) }}">
                            {{ task.title }}
                        </a>
                    {% else %}
                        {{ task.title }}
                    {% endif %}
                </td>
                <td>
                    {% if task.link is not empty %}
                        <a href="{{ task.link }}" class="btn btn-secondary btn-sm" target="_blank">link</a>
                    {% endif %}
                </td>
                <td>{{ task.reminder ? task.reminder|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ status.title }}</td>
                <td>
                    {% if isActive %}
                        <a href="{{
                            path('app_task_finish', {
                                'id': task.id,
                            })
                        }}" class="btn btn-outline-warning btn-sm" style="width: 45px">stop</a>
                    {% else %}
                        <a href="{{
                            path('app_task_start', {
                                'id': task.id,
                            })
                        }}" class="btn btn-outline-primary btn-sm">start</a>
                    {% endif %}
                    <a href="{{
                        path('app_task_new_parent', {
                            'parent': task.id,
                            'status': newTaskStatus.slug | default(null)
                        })
                    }}" class="btn btn-secondary btn-sm">new</a>
                    <a href="{{
                        path('app_task_edit', {
                            'id': task.id,
                            'link': link.id
                        })
                    }}" class="btn btn-secondary btn-sm">edit</a>
                    <form method="post" action="{{ path('task_delete', {'id': task.id}) }}" class="d-inline"
                          onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
