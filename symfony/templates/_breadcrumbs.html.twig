<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        {% if parent is empty %}
            <li class="breadcrumb-item active" aria-current="page">
                <a href="{{ path(root.route, root.routeParams) }}">{{ root.title }}</a>
            </li>
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('app_task_new', {
                    'link': root.id, 'status': status.id | default(null)
                }) }}">+</a></li>
        {% else %}
            <li class="breadcrumb-item">
                <a href="{{ path(root.route, root.routeParams) }}">{{ root.title }}</a>
            </li>
            {% for item in path %}
                {% if not loop.last %}
                    <li class="breadcrumb-item">
                        <a href="{{ path(root.parentRoute, root.parentRouteParams(item)) }}">{{ item.title }}</a>
                    </li>
                {% else %}
                    <li class="breadcrumb-item active" aria-current="page">
                        <a href="{{ path(root.parentRoute, root.parentRouteParams(item)) }}">{{ item.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}
            <li class="breadcrumb-item active" aria-current="page">
                <a href="{{ path('app_task_new_parent', {
                    'parent': parent.id, 'link': root.id, 'status': status.slug | default(null)
                }) }}">+</a>
            </li>
        {% endif %}
    </ol>
</nav>