<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        {% if parent is empty %}
            <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_task_index') }}">All</a></li>
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('app_task_new') }}">+</a></li>
        {% else %}
            <li class="breadcrumb-item"><a href="{{ path('app_task_index') }}">All</a></li>
            {% for item in path %}
                {% if not loop.last %}
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_task_index_parent', {'parent': item.id}) }}">
                            {{ item.title }}
                        </a>
                    </li>
                {% else %}
                    <li class="breadcrumb-item active" aria-current="page">
                        <a href="{{ path('app_task_index_parent', {'parent': item.id}) }}">
                            {{ item.title }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
            <li class="breadcrumb-item active" aria-current="page">
                <a href="{{ path('app_task_new_parent', {'parent': parent.id}) }}">+</a>
            </li>
        {% endif %}
    </ol>
</nav>